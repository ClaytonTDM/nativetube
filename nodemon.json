{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node"
    },
    "watch": [
      "css",
      "html",
      "js",
      "."
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js html css json"
  }